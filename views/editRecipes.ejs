<%- include('header'); -%>
<%- include('navbar'); -%>

  <div class="jumbotron masthead text-center" id="/">
    <div class="card mx-auto" id="cardStyle">
      <div class="card-body">
        <h1>Edit Your Recipe Here!</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <form method="post" action="/showRecipes/<%=req.params.id%>/editRecipes/processRecipesPost">
              <div class="form-group">
                <h5 class="card-header">Dish Name</h5>
                <input type="text" class="form-control" id="dishName" name="dishName" value="<%=recipes.recipes%>"><br>
              </div>
              <div class="form-group">
                <h5 class="card-header">Ingredients</h5>
                <input type="text" class="form-control" id="ingredients" name="ingredients" value="<%=recipes.ingredients%>"><br>
              </div>
              <div class="form-group">
                <h5 class="card-header">Instructions</h5>
                <input type="text" class="form-control" id="instructions" name="instructions" value="<%=recipes.instructions%>"><br>
              </div>
              <input class="btn btn-primary" type="submit">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>


<%- include('footer'); -%>
